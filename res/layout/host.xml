<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TableLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    
        <TableRow 
            android:paddingLeft="10dip"
            android:gravity="left">
   	        <TextView
   	            android:textColor="#000000"
   	            android:textSize="16sp"
    	        android:text="Channel name :  "
            />
         
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/hostChannelName"
    	        android:text="1234567890"
            />
        </TableRow>
        
        <TableRow 
            android:paddingLeft="10dip"
            android:gravity="left">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
    	         android:text="Channel state :  "
            />
         
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/hostChannelStatus"
    	        android:text="1234567890"
            />
        </TableRow>
    </TableLayout>
    
    <View
        android:layout_width="match_parent"
    	android:layout_height="50dip">
    </View>
    
	<Button
	    android:padding="15dip"
	    android:background="#eeFFFFFF"
	    android:textSize="20sp"
	    android:id="@+id/hostSetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:text="Set the channel name"
    />
        
    <Button
        android:padding="15dip"
	    android:background="#eeFFFFFF"
	    android:textSize="20sp"
        android:id="@+id/hostStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start channel"
    />
    
    <Button
        android:padding="15dip"
	    android:background="#eeFFFFFF"
	    android:textSize="20sp"
        android:id="@+id/hostStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop channel"
    />
    
    <Button
        android:padding="15dip"
	    android:background="#eeFFFFFF"
	    android:textSize="20sp"
        android:id="@+id/hostQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit the application"
    />
</LinearLayout>
